
  <%= render 'top_link' %>

      <br><br>


      <h2  align="center" style="padding-top: 10Ppx; color:black;  padding-bottom: 10px;"> ALL UPCOMING EVENTS</h2>
        <br />
        
      
      <div class="filter">
        <%= form_tag '#', :method => :get do%>
        <%= collection_select :category, :id, Category.all, :id, :name, placeholder: "FILTER BY CATEGORY" %>
        <%= submit_tag 'Filter' %>
        <% end %>
      </div>
     
      <%= form_tag events_path, :method => :get do %>
        <%= text_field_tag :search %>
        <%= submit_tag 'Search'%>
      <% end %>

    </div>
    <br />
    <%= render 'events_cards' %>

      <br/>
      <br />
      <div class="w-100"></div>
        <div id="events">
          <%= month_calendar events: @events do |date, events| %>
            <%= date %>
            <% events.each do |event| %>
              <%= event.name %>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
