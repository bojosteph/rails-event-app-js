<%= form_for @event do |f|%>
<div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name %>
</div>
<div class="form-group">
    <%= f.label :start_date %>
    <%= f.datetime_field :start_date %>
</div>
<div class="form-group">
    <%= f.label :end_date %>
    <%= f.datetime_field :end_date %>
</div>
<div class="form-group">
    <%= f.label :location %>
    <%= f.text_field :location %>
</div>
<div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description %>
</div>

<%= f.submit %>
<% end %>