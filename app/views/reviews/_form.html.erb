<% if @review.errors.any? %>
<h4 style="color:#FF5500"><%= @review.errors.full_messages.to_sentence %></h4>
<% end %>

<%= form_for([@event, @review]) do |f|%>
<%= f.hidden_field :reviewer_id %>

<div class="form-group">
  <%= f.label :rating %>
  <%= f.select :rating, options_for_select(0..10), class: 'form-control' %>
</div>
<div class="form-group">
  <%= f.label :body %>
  <%= f.text_area :body, class: 'form-control' %>
</div>


<%= f.submit %>
<% end %>

