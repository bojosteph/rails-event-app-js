<div class="container">
  <h1 class="display-2" align="center" style="padding-top: 10Ppx; color:black;  padding-bottom: 10px;"> All Upcoming
    Events</h1>


  <div class="row">

    <% @events.each do |event| %>

    <div class="col-sm" style="padding-bottom: 10px;">
      <div class="card" style="width: 18rem;">
        <div class="card-body">

          <h5 class="card-title">
            <%= event.name %>
          </h5>
          <h6 class="card-subtitle mb-2 text-muted">
            <%= start_of_event event %>
          </h6>
          <h6 class="card-subtitle mb-2 text-muted">
            <%= end_of_event  event %>
          </h6>
          <h6 class="card-subtitle mb-2 text-muted">
            <%= event.location %>
          </h6>
          <p class="card-text">
            <%= event.description.truncate(25, separator: /\s/) %>
          </p>
          <a href="<%= user_event_path(@user, event) %>" class="card-link">Event Details</a>

        </div>
      </div>
    </div>

    <br />
    <br />

    <% end %>

    <br />
    <div id="events">
      <%= month_calendar events: @events do |date, events| %>
      <%= date %>

      <% events.each do |event| %>
        <div>
          <%= event.name %>
        </div>
      <% end %>
      <% end %>
    </div>
  </div>
</div>